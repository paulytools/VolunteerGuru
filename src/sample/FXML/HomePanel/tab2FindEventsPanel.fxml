<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.FXML.HomePanel.HomeController">
   <children>

      <HBox prefHeight="47.0" prefWidth="600.0">
         <children>

             <Label minWidth="-Infinity" text="Find Events">
               <font>
                  <Font name="Verdana Bold" size="30.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="10.0" />
               </HBox.margin>
             </Label>

            <Region prefHeight="53.0" prefWidth="373.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="btn_OpenLogin" minWidth="-Infinity" mnemonicParsing="false" onAction="#OpenLoginBTNClicked" text="Login" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </HBox.margin>
            </Button>

             <Button fx:id="btn_SignUp" minWidth="-Infinity" mnemonicParsing="false" onAction="#signUpBTNClicked" text="Sign-Up" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="5.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>

      <TextField fx:id="txtFL_SearchCharity" prefHeight="25.0" prefWidth="603.0">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TextField>

     <HBox>
         <children>
            <ComboBox minWidth="-Infinity" prefWidth="150.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ComboBox>
            <Region prefHeight="15.0" prefWidth="534.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="btn_Search" minWidth="-Infinity" mnemonicParsing="false" prefHeight="48.0" prefWidth="98.0" text="Search">
               <HBox.margin>
                  <Insets right="10.0" top="2.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>

      <TreeTableView fx:id="TTV_Results" pickOnBounds="false" prefHeight="519.0" prefWidth="1270.0" VBox.vgrow="ALWAYS">
        <columns>
          <TreeTableColumn fx:id="TTC1_Charity_Name" prefWidth="269.0" text="Events" />
          <TreeTableColumn fx:id="TTC2_City" prefWidth="834.0" text="Description" />
            <TreeTableColumn prefWidth="165.0" text="Date" />
        </columns>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TreeTableView>
   </children>
</VBox>
